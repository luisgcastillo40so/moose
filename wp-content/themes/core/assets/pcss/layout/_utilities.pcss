/* -------------------------------------------------------------------------
 *
 * Layout Helpers
 *
 * Uses clear attribute to clear floats on elements
 *
 * ------------------------------------------------------------------------- */

/* -----------------------------------------------------------------------
 * Clear - Both
 * ----------------------------------------------------------------------- */

.l-clear-both {
	clear: both;
}

/* -----------------------------------------------------------------------
 * Clear - Left
 * ----------------------------------------------------------------------- */

.l-clear-left {
	clear: left;
}

/* -----------------------------------------------------------------------
 * Clear - Right
 * ----------------------------------------------------------------------- */

.l-clear-right {
	clear: right;
}

/* -----------------------------------------------------------------------
 * Clearfix
 * ----------------------------------------------------------------------- */

.l-clearfix::after {
	content: "";
	display: table;
	clear: both;
}
