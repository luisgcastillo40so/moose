/* -------------------------------------------------------------------------
 *
 * Typography: Anchors
 *
 * ------------------------------------------------------------------------- */

a {

	&:not(.wp-element-button):focus-visible {

		@mixin focus-visible-inline-text;
	}

	/* -------------------------------------------------------------------------
	 * Anchor: Inline Links
	 *
	 * Note: Not in theme.json as the selector needs to be more specific
	 * ------------------------------------------------------------------------- */

	:where(p, li) & {

		@mixin inline-text-link;
	}
}
